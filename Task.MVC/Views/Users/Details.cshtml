@using UsersDto = Task.BLL.DTO.UsersDto
@model UsersDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>User Details</h2>

<div>
    <h4>User Info</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        
        <dt class="col-sm-2">Surname:</dt>
        <dd class="col-sm-10">@Model.Surname</dd>
        
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        
        <dt class="col-sm-2">Middlename:</dt>
        <dd class="col-sm-10">@Model.Middlename</dd>
        
        <dt class="col-sm-2">Birthday:</dt>
        <dd class="col-sm-10">@Model.Birthday.ToShortDateString()</dd>
    </dl>
</div>
<p>
    <a asp-action="Index">Back to List</a>
</p>